<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idk.smartgadgetguide">

    <application
        android:allowBackup="true"
        android:icon="@drawable/smartgadgetnew"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".flagship"></activity>
        <activity android:name=".midrange" />
        <activity android:name=".budget" />
        <activity android:name=".tablet" />
        <activity android:name=".smartphone" />
        <activity android:name=".home" />
        <activity android:name=".Login" />
        <activity android:name=".registration" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>